<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="70dp"
    android:background="#FFD27F"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bacgroundcirlce"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:id="@+id/jk"
            app:shadowAlpha="0.4"
            android:gravity="center"
            app:shadowOffsetX="0"
            app:shadowOffsetY="3"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profil_userPhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="10dp"
            android:layout_margin="10dp"

            android:layout_marginTop="6dp"

            android:layout_centerHorizontal="true"
            android:src="@drawable/circleimages"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/jk"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:padding="6dp"
            android:textSize="30sp"
            android:id="@+id/profil_userLogin"
            android:textStyle="italic"
            android:fontFamily="@font/mu"
            android:text="Błażej Jasiński"
            android:layout_height="wrap_content"></TextView>



        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/zcz"
            android:layout_below="@+id/profil_userLogin"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:weightSum="20"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"

                android:textAlignment="center"


                android:textStyle="bold"
                android:fontFamily="@font/mu"
                android:layout_weight="20"
                android:textSize="19sp"
                android:text="Książki przeczytane"

                android:layout_height="wrap_content"></TextView>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/zcz"
            android:layout_marginRight="20dp"
            android:id="@+id/cvv"
            android:orientation="horizontal"
            android:weightSum="20"
            android:layout_height="wrap_content"
            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_weight="20"
                app:shadowAlpha="1"
                app:shadowOffsetX="0"

                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_below="@+id/profil_userLogin"
                android:text="340"

                android:padding="10dp"
                android:elevation="5dp"
                android:layout_margin="10dp"

                android:paddingTop="20dp"

                android:paddingBottom="20dp"

                android:id="@+id/profil_userReadBook"

                android:background="@drawable/gray2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:fontFamily="@font/mu"
                android:textSize="25sp"
                android:layout_height="wrap_content"></TextView>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/sda"
            android:layout_below="@+id/cvv"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:weightSum="20"

            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"

                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/mu"
                android:textSize="19sp"
                android:layout_weight="20"
                android:text="Czas czytania"

                android:layout_height="wrap_content"></TextView>




        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:id="@+id/zz"
            android:layout_below="@+id/sda"
            android:orientation="horizontal"
            android:weightSum="20"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_weight="20"
                app:shadowAlpha="1"
                app:shadowOffsetX="0"

                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_below="@+id/profil_userLogin"
                android:text="17h 34m"

                android:layout_marginRight="20dp"

                android:id="@+id/profil_timeRead"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:fontFamily="@font/mu"
                android:textSize="25sp"
                android:padding="10dp"
                android:elevation="5dp"
                android:layout_margin="10dp"

                android:paddingTop="20dp"

                android:paddingBottom="20dp"



                android:background="@drawable/gray2"
                android:layout_height="wrap_content"></TextView>
            </LinearLayout>r>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/profil_bookDescription"
            android:layout_below="@+id/zz"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:weightSum="20"

            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"

                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/mu"
                android:textSize="19sp"

                android:text="Średnia ocena"

                android:layout_height="wrap_content"></TextView>




        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profil_bookDescription"
            android:orientation="horizontal"
            android:id="@+id/gg"
            android:weightSum="20"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_weight="20"
                android:layout_marginRight="20dp"
                app:shadowAlpha="1"
                app:shadowOffsetX="0"

                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_below="@+id/profil_userLogin"
                android:text="5.5"

                android:id="@+id/profil_userAvg"
                android:background="@drawable/gray2"


                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"

                android:fontFamily="@font/mu"
                android:textSize="25sp"
                android:padding="10dp"
                android:elevation="5dp"
                android:layout_margin="10dp"

                android:paddingTop="20dp"

                android:paddingBottom="20dp"
                android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/sdaxx"
            android:layout_below="@+id/gg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:weightSum="20"

            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/mu"
                android:textSize="19sp"
                android:text="Ranking"

                android:layout_height="wrap_content"></TextView>







        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sdaxx"
            android:id="@+id/qw2"
            android:orientation="horizontal"
            android:weightSum="20"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_weight="20"

                app:shadowAlpha="1"
                app:shadowOffsetX="0"

                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_below="@+id/profil_userLogin"
                android:text="17"

                android:layout_weight="20"
                android:layout_margin="10dp"


                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"

                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/gray2"
                android:fontFamily="@font/mu"
                android:textSize="25sp"
                android:padding="10dp"
                android:elevation="5dp"
                android:layout_height="wrap_content"></TextView>
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/qw2"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="15dp"
            android:textStyle="bold"

            android:textSize="25sp"
            android:text="Szczegóły"
            android:id="@+id/kurwa"
            android:textAlignment="center"
            android:layout_height="wrap_content"></TextView>

        <Button
            android:layout_width="match_parent"
            android:text="Przeczytane książki"
            android:background="@drawable/main_button_background"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:id="@+id/profil_readBookButton"
            android:layout_below="@+id/kurwa"
            android:layout_marginTop="9dp"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"></Button>
        <Button
            android:layout_width="match_parent"
            android:text="Więcej statystyk"
            android:background="@drawable/main_button_background"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_below="@+id/profil_readBookButton"
            android:layout_marginTop="9dp"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"></Button>
    </RelativeLayout>
</ScrollView>