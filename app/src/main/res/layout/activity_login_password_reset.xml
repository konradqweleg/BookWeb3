<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/fg"
    tools:context=".login.PasswordResetActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/LoginPasswordReset_layout"

            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="95dp"
                android:id="@+id/LoginPasswordReset_logo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:layout_alignParentTop="true"

                android:fontFamily="@font/roboto_bold"
                android:text="@string/LoginPasswordReset_logoText"
                android:textColor="#2D2C2B"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/LoginPasswordReset_descriptionPage"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/LoginPasswordReset_logo"
                android:layout_alignStart="@+id/LoginPasswordReset_logo"


                android:layout_marginTop="-5dp"
                android:fontFamily="@font/roboto"
                android:text="@string/LoginPasswordReset_descriptionPage"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_bold"
                android:layout_alignStart="@+id/LoginPasswordReset_logo"
                android:layout_below="@+id/LoginPasswordReset_descriptionPage"

                android:text="@string/LoginPasswordReset_emailDescription"
                android:textColor="#2D2C2B"
                android:id="@+id/LoginPasswordReset_descriptionEmail"
                android:layout_marginTop="45dp"
                android:textSize="16sp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"

                android:layout_marginEnd="20dp"
                android:id="@+id/LoginPasswordReset_inputEmailFrame"
                android:layout_alignStart="@+id/LoginPasswordReset_logo"
                android:layout_below="@+id/LoginPasswordReset_descriptionEmail"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/LoginPasswordReset_inputLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/input_background"
                android:fontFamily="@font/roboto"
                android:maxLength="30"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#000"
                tools:ignore="Autofill,LabelFor,TextFields" />
                <EditText
                    android:id="@+id/LoginPasswordReset_inputLoginRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/red_input_background"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLength="30"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    tools:ignore="Autofill,LabelFor,TextFields" />

            </FrameLayout>
            <TextView
                android:id="@+id/LoginPasswordReset_errorMessage"
                android:layout_width="match_parent"
                android:layout_marginEnd="20dp"

                android:layout_height="wrap_content"
                android:layout_below="@+id/LoginPasswordReset_inputEmailFrame"
                android:layout_alignStart="@+id/LoginPasswordReset_inputEmailFrame"
                android:textColor="#FF523A"

                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:fontFamily="@font/roboto"
                android:text="@string/LoginRegister_descriptionPage"
                android:textSize="16sp"/>


            <ImageView
                android:id="@+id/LoginPasswordReset_arrowLeft"
                android:layout_width="70dp"
                android:layout_marginTop="-8dp"
                android:paddingTop="18dp"
                android:layout_marginEnd="-22dp"
                android:paddingBottom="27dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="1dp"
                android:layout_alignEnd="@+id/LoginPasswordReset_inputEmailFrame"
                android:layout_alignTop="@+id/LoginPasswordReset_logo"
                android:src="@drawable/arrow_left"
                android:contentDescription="@string/activity_loginEmail_ArrowBackDescription" />




            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/LoginPasswordReset_inputEmailFrame"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/LoginPasswordReset_resetPasswordButton"
                android:background="@drawable/main_button_background"
                android:layout_below="@+id/LoginPasswordReset_errorMessage"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/LoginPasswordReset_restorePassword"
                android:textAllCaps="false"
                android:textColor="#fff">

            </Button>
        </RelativeLayout>
    </ScrollView>








</RelativeLayout>

