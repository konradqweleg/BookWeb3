<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/ListCommentOne_userName"
            android:textColor="#000"

            android:text=""
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/ListCommentOne_userName"
            android:text="17.12.2019"
            android:layout_marginTop="8dp"
            android:id="@+id/ListCommentOne_dateCommand"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/ListCommentOne_dateCommand"
            android:text=""
            android:id="@+id/marks"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/ListCommentOne_userOpinion"
            android:textColor="#000"
            android:layout_below="@+id/ListCommentOne_dateCommand"
            android:text=""
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>