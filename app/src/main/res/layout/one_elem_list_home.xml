<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="wrap_content"
    android:layout_alignStart="@id/LoginRegister_emailFrame"
    android:layout_alignEnd="@+id/LoginRegister_emailFrame"
    android:layout_below="@+id/LoginRegister_passwordDescription"
    android:id="@+id/List_horizontalScrollPopular"
    android:layout_height="180dp"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/input_background"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:padding="15dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/List_image"
            android:layout_height="match_parent"
            android:contentDescription="@string/List_imageBook" />

        <TextView
            android:layout_width="wrap_content"
            android:text=""
            android:layout_toEndOf="@+id/List_image"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/List_nameBook"

            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text=""
            android:id="@+id/List_authorsBook"
            android:layout_toEndOf="@+id/List_image"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="20dp"

            android:layout_height="wrap_content" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_toEndOf="@+id/List_image"
           android:layout_below="@+id/List_authorsBook"
           android:layout_marginStart="20dp"

            android:id="@+id/List_markBookDescription"
           android:layout_marginTop="10dp"
           android:text="Ocena: "
           android:layout_height="wrap_content">

       </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/List_markBookDescription"
            android:layout_below="@+id/List_authorsBook"

            android:textColor="@color/colorAccent"
            android:id="@+id/List_markBook"
            android:layout_marginTop="10dp"
            android:text=""
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/List_image"
            android:layout_below="@+id/List_markBook"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/List_gentreBook_1"

            android:text=""
            android:background="@drawable/white_theme"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/List_gentreBook_1"
            android:layout_below="@+id/List_markBook"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/List_gentreBook_2"

            android:text=""
            android:background="@drawable/white_theme"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/List_gentreBook_2"
            android:layout_below="@+id/List_markBook"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/List_gentreBook_3"

            android:text=""
            android:background="@drawable/white_theme"
            android:layout_height="wrap_content">

        </TextView>



    </RelativeLayout>


</FrameLayout>



