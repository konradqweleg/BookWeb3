<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:layout_margin="5dp"

            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"

            android:background="@drawable/search_theme"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/List_image"
                android:layout_width="120dp"
                android:layout_marginLeft="10dp"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/blazej"
                android:scaleType="fitCenter"
                app:riv_corner_radius="3dip"
                app:riv_border_width="2dip"
                app:riv_border_color="#fff"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/List_image"
                android:textAlignment="center"
                android:fontFamily="@font/mu"
                android:id="@+id/FriendOne_nameFriend"
                android:textColor="#000"
                android:text="Błażej Jasiński"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/List_image"
                android:layout_below="@id/FriendOne_nameFriend"
                android:id="@+id/List_authorsBook"
                android:text="Ocenił"
                android:textAlignment="center"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/List_image"
                android:text="Lśnienie"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#ffa500"
                android:fontFamily="@font/mu"
                android:id="@+id/YourMark_ratingBook"
                android:layout_below="@+id/List_authorsBook"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/List_image"
                android:textSize="23sp"
                android:text="7,55"
                android:id="@+id/FriendOne_markFriend"
                android:fontFamily="@font/mu"
                android:textAlignment="center"

                android:layout_below="@id/YourMark_ratingBook"
                android:layout_height="wrap_content">

            </TextView>



        </RelativeLayout>

</FrameLayout>