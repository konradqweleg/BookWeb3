<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:gravity="center"

    android:layout_height="match_parent"
    tools:context=".general.NoInternetConnection">


        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/ii"
            android:layout_height="wrap_content"
            android:src="@drawable/no_internet_icon"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Jesteś offline"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"

            android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:text="Sprawdź połączenie z internetem a następnie odśwież"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"

        android:layout_height="wrap_content"></TextView>

<Button
    android:layout_width="300dp"
    android:text="Odświerz"
    android:textAllCaps="false"
    android:id="@+id/NoInternetConnection_buttonTryConnection"
    android:layout_marginTop="30dp"
    android:textColor="#fff"
    android:background="@drawable/main_button_background"
    android:layout_height="wrap_content"></Button>





</LinearLayout>