<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/FriendsList_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_person_black_24dp"
        android:layout_width="120dp"
        android:layout_height="120dp"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:text="Konrad Groń"
        android:textAlignment="center"
        android:id="@+id/FriendsList_name"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/FriendsList_image"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/FriendsList_howBookReads"
        android:text="37 książek"
        android:textAlignment="center"
        android:layout_below="@+id/FriendsList_name"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/FriendsList_image"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/FriendsList_rankPosition"
        android:text="7 miejsce"
        android:textAlignment="center"
        android:layout_below="@+id/FriendsList_howBookReads"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/FriendsList_image"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"></TextView>


</RelativeLayout>