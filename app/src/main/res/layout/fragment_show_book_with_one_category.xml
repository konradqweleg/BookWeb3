<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.databaseBooks.ShowBookWithOneCategory">


    <ImageView
        android:layout_width="wrap_content"
        android:background="@drawable/arrow_left"
        android:id="@+id/ShowBookOneCategory_returnCategoryBookButton"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:id="@+id/ShowBookOneCategory_filterSettings"
        android:background="@drawable/ic_icons8_menu"
        android:layout_height="wrap_content"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:text="Horror"
        android:layout_centerHorizontal="true"
        android:textSize="27sp"
        android:layout_marginTop="10dp"

        android:id="@+id/ShowBookOneCategory_nameCategoryBooks"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:layout_height="wrap_content"></TextView>


    <ListView
        android:layout_width="400dp"
        android:layout_below="@+id/ShowBookOneCategory_returnCategoryBookButton"
        android:id="@+id/ShowBookOneCategory_ListBooks"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content"></ListView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="330dp"
        android:layout_marginBottom="65dp"
        android:layout_alignParentRight="true"


        android:id="@+id/ShowBookOneCategory_filterPanel"

        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/ShowBookOneCategory_exitFilterPanel"
                android:background="@drawable/ic_close_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"></ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="Ocena"
            android:fontFamily="@font/monte"
            android:background="@drawable/searchthemegray"
            android:id="@+id/ocena"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="6"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/cc"
                android:paddingRight="20dp"
                android:layout_below="@+id/ocena"
                android:layout_height="wrap_content">




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/cc"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="6"
                android:id="@+id/vg"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:id="@+id/ShowBookOneCategory_od"
                    android:inputType="number"
                    android:text="0"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"></EditText>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:text="10"
                    android:id="@+id/ShowBookOneCategory_do"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"></EditText>

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
              android:layout_below="@+id/vg"
                android:textSize="18sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:id="@+id/ghg"
                android:background="@drawable/searchthemegray"
                android:fontFamily="@font/monte"
                android:layout_marginRight="50dp"
                android:text="Rok powstania"
                android:layout_height="wrap_content"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/ghg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="6"
                android:id="@+id/vgdd"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:id="@+id/ShowBookOneCategory_fromYearsBookCreate"

                    android:inputType="number"
                    android:text="1400"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"></EditText>



                <EditText
                    android:layout_width="wrap_content"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:text="2020"
                    android:id="@+id/ShowBookOneCategory_EndYearsBookCreate"

                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"></EditText>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/vgdd"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:id="@+id/ghgasd"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:background="@drawable/searchthemegray"
                android:text="Autor"
                android:fontFamily="@font/monte"
                android:layout_height="wrap_content"></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_below="@+id/ghgasd"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ShowBookOneCategory_authorsName"

                android:layout_height="60dp"></EditText>

            <Button
                android:layout_width="match_parent"
                android:text="Filtruj"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/monte"
                android:layout_marginTop="10dp"

                android:layout_below="@+id/ShowBookOneCategory_authorsName"
                android:id="@+id/ShowBookOneCategory_addFilterToAdapter"
                android:background="@drawable/main_button_background"
                android:layout_height="wrap_content"></Button>






        </RelativeLayout>


    </com.google.android.material.navigation.NavigationView>

</RelativeLayout>