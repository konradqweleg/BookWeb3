<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="12"

    android:layout_height="130dp">
    <TextView
        android:layout_width="40dp"
        android:text="1"
        android:id="@+id/SingleWriterRank_positionRank"
        android:gravity="center"
        android:textSize="45sp"
        android:layout_weight="2"
        android:layout_height="120dp"></TextView>

    <ImageView
        android:layout_width="90dp"
        android:layout_weight="2"

        android:id="@+id/SingleWritersRank_photoAuthors"
       android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"

        android:layout_height="120dp"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:text="Wojciech Chmielarz"
        android:layout_toEndOf="@+id/SingleWritersRank_photoAuthors"
        android:layout_weight="9"
        android:id="@+id/SingleWritersRank_nameAuthors"
        android:textAlignment="center"
        android:textSize="22sp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:id="@+id/SingleWritersRank_markAuthors"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent2"
        android:textSize="40sp"
        android:layout_toEndOf="@+id/SingleWritersRank_photoAuthors"
        android:text="6.87"
        android:layout_below="@+id/SingleWritersRank_nameAuthors"
        android:layout_height="wrap_content"></TextView>


</RelativeLayout>